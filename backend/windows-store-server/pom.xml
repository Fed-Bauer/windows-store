<project 
    xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                        http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>com.kanokna</groupId>
  <artifactId>windows-store-server</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>windows-store-server</name>
  <description>The project of windows store for company the Kanokna</description>
  <url>http://www.kanokna.com</url>

   <licenses>
		<license>
			<name>MIT License</name>
			<url>https://opensource.org/licenses/MIT</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>Fed-Bauer</id>
			<name>Paramonov Vlad</name>
			<email>CornerDev@protonmail.com</email>
			<organization>Kanokna</organization>
			<organizationUrl>https://github.com/Fed-Bauer</organizationUrl>
		</developer>
	</developers>

	<scm>
		<connection>https://github.com/Fed-Bauer/windows-store.git</connection>
		<developerConnection>https://github.com/Fed-Bauer/windows-store.git</developerConnection>
		<tag>HEAD</tag>
		<url>https://github.com/Fed-Bauer/windows-store.git</url>
	</scm> 

  <properties>
    <java.version>21</java.version>
		<spring-ai.version>1.0.0-M5</spring-ai.version>
		<spring-cloud.version>2024.0.0</spring-cloud.version>
  </properties>

  <modules>
		<module>common</module>
   </modules>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
    </dependency>
    <dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-cassandra</artifactId>
